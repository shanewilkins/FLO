{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FLO IR",
  "type": "object",
  "required": ["process","nodes","edges"],
  "properties": {
    "process": {
      "type": "object",
      "required": ["id","name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "version": { "oneOf": [{"type":"integer"},{"type":"string"}] },
        "metadata": { "type": "object", "additionalProperties": true }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","kind"],
        "properties": {
          "id": { "type": "string" },
          "kind": { "type": "string", "enum": ["start","task","decision","end","subprocess"] },
          "name": { "type": "string" },
          "lane": { "type": "string" },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source","target"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "target": { "type": "string" },
          "outcome": { "type": "string" },
          "label": { "type": "string" },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "lanes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["role","team","system"] },
          "metadata": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
